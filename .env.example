# Azure AI Content Safety
CONTENT_SAFETY_ENDPOINT=https://your-content-safety.cognitiveservices.azure.com/
CONTENT_SAFETY_KEY=your_key_here_or_leave_empty_for_entra_id
CONTENT_SAFETY_API_VERSION=2024-09-01

# Azure AI Language (Text Analytics)
LANGUAGE_ENDPOINT=https://your-language.cognitiveservices.azure.com/
LANGUAGE_KEY=your_key_here_or_leave_empty_for_entra_id

# Azure OpenAI (optional - only needed for full pipeline with LLM)
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com/
AZURE_OPENAI_KEY=your_key_here_or_leave_empty_for_entra_id
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Safety Configuration
SAFETY_SEVERITY_THRESHOLD=2

# Blocklist Configuration
BLOCKLIST_NAMES=demo-blocklist-a,demo-blocklist-b

# Enhanced exact match terms (comma-separated)
# Default includes: secret_project_x, internal_use_only, forbidden_term, confidential_data,
# classified_info, restricted_access, do_not_share, proprietary_code, admin_credentials,
# root_password, master_key, nuclear_codes
BLOCKLIST_SEED_EXACT=secret_project_x,internal_use_only,forbidden_term,confidential_data,classified_info,restricted_access

# Enhanced regex patterns (JSON array format preferred, or comma-separated)
# Default patterns detect: passwords, API keys, access tokens, secret keys, bearer tokens,
# SSH keys, private keys, and connection strings
# Example JSON format:
# BLOCKLIST_SEED_REGEX=["password\\s*[:=]\\s*\\w{6,}","api[_-]?key\\s*[:=]\\s*[A-Za-z0-9]{12,}"]
